<?xml version="1.0"?>
<config>
    <!--// We use system logger //-->
    <syslog>
	<facility>user</facility>
    </syslog>
    <network>
	<!-- Device to bind multicast socket to -->
	<interface>vlan2</interface>
    </network>
    <upnp>
	<!-- timer between anouncing configured devices -->
	<timing announce-period="10" />
	<!-- location URL for root devices description XML -->
	<rootdevice locationURL="http://host:port/path/description.xml" UUID="uuid"/>
    </upnp>
</config>
